<?xml version="1.0"?>

<project name="OSSpecific" default="dist" basedir=".">

  <!-- set global properties for this build -->
  <property name="src" value="OSSpecific/src" />
  <property name="build" value="OSSpecific/build" />

  <property name="docs" value="OSSpecific/docs" />
  <property name="dist" value="Live_Application" />
  <property name="assemble" value="${dist}/Plugins" />
  <property name="aoijar" value="${dist}/ArtOfIllusion.jar" />
  <property name="orange-jar" value="OSSpecific/lib/orange-extensions-1.3.0.jar"/>
  
  <property name="JavaVersion" value="7" />
  <property name="args" value="-nowarn" />

  <property name="ext-src" value="OSSpecific/src-ext" />
  <property name="ext-build" value="OSSpecific/class-ext" />

  <target name="init">
    <!-- Create the time stamp -->
    <tstamp/>
    <!-- Create the build directory structure used by compile -->
    <mkdir dir="${build}" />
    <!-- create the dist directory -->
    <mkdir dir="${dist}" />
    <mkdir dir="${assemble}" />
  </target>

  <target name="compile-ext">
    <!-- Compile the extra java code from ${ext-src} into ${ext-build} -->
    <javac srcdir="${ext-src}" destdir="${ext-build}"  debug="off" target="${JavaVersion}" source="${JavaVersion}" >
      <compilerarg line="${args}"/>
    </javac>
  </target>

  <target name="compile" depends="init, compile-ext">

    <!-- Compile the java code from ${src} into ${build} -->
    <javac srcdir="${src}" destdir="${build}" debug="true" target="${JavaVersion}" source="${JavaVersion}" >
      <compilerarg line="${args}"/>
      <classpath>
        <path location="${orange-jar}"/> 
        <dirset dir="${ext-build}" includes="/**/*.class"/>
	<path location="${aoijar}"/>
        
      </classpath>
    </javac>
  </target>

  <target name="dist" depends="compile">
    <jar jarfile="${assemble}/OSSpecific.jar" basedir="${build}" >
      <fileset dir="${src}" includes="*.xml" />
    </jar>
  </target>

  <target name="docs" depends="init">
    <javadoc packagenames="artofillusion.*"
        sourcepath="${src}"
	classpath="${aoijar}"
	source="${JavaVersion}"
        defaultexcludes="yes"
	destdir="${docs}/${ant.project.name}"
        author="true"
        version="true"
        use="true"
        windowtitle="Art of Illusion Documentation"
	public="true">
      <doctitle><![CDATA[<h1>Art of Illusion</h1>]]></doctitle>
      <bottom><![CDATA[<i>Copyright &copy; 1999-2008 by Peter Eastman.</i>]]></bottom>
    </javadoc>
  </target>

  <target name="clean">
    <!-- Delete the ${build} and ${docs} directory trees -->
    <delete dir="${build}" />
    <delete dir="${docs}" />
  </target>
</project>

