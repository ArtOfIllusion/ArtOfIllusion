<?xml version="1.0" standalone="yes"?>
<extension name="Tools" version="3.0">
    <author>Peter Eastman</author>
    <date>2013</date>
    <description>
        This plugin contains the standard modeling tools which are included with Art of Illusion.
    </description>
    <resource type="TranslateBundle" id="Tools" name="Bundle"/>
    <plugin class="artofillusion.tools.ArrayTool"/>
    <plugin class="artofillusion.tools.CSGTool"/>
    <plugin class="artofillusion.tools.ExtrudeTool">
        <export method="extrudeCurve" id="artofillusion.tools.ExtrudeTool.extrudeCurve"/>
        <export method="extrudeMesh" id="artofillusion.tools.ExtrudeTool.extrudeMesh"/>
    </plugin>
    <plugin class="artofillusion.tools.LatheTool">
        <export method="latheCurve" id="artofillusion.tools.LatheTool.latheCurve"/>
    </plugin>
    <plugin class="artofillusion.tools.SkinTool"/>
    <plugin class="artofillusion.tools.TextTool">
        <export method="createText" id="artofillusion.tools.TextTool.createText"/>
    </plugin>
    <plugin class="artofillusion.tools.TubeTool"/>

    <plugin class="artofillusion.tools.CubeFactory"/>
    <plugin class="artofillusion.tools.SphereFactory"/>
    <plugin class="artofillusion.tools.CylinderFactory"/>
    <plugin class="artofillusion.tools.ConeFactory"/>
    <plugin class="artofillusion.tools.TorusMeshProvider"/>
    <plugin class="artofillusion.tools.ScriptedObjectProvider"/>

    <plugin class="artofillusion.tools.CameraFactory"/>

    <plugin class="artofillusion.tools.PointLightFactory"/>
    <plugin class="artofillusion.tools.DirectionalLightFactory"/>
    <plugin class="artofillusion.tools.SpotLightFactory"/>
    <plugin class="artofillusion.tools.ProceduralPointLightFactory"/>
    <plugin class="artofillusion.tools.ProceduralDirectionalLightFactory"/>

    <plugin class="artofillusion.tools.ReferenceImageFactory"/>
    <plugin class="artofillusion.tools.NullFactory"/>

</extension>

